  <div class="container mt-5">
    <div class="row">
      <div class="col">
        <h1 class="text-info text-center">ジャンル編集</h1>
      </div>
    </div>
      <%= form_with model: @genre, url: admin_genre_path,local: true do |f| %>
        <div class="row">
          <div class="mx-auto">
            <%= f.label :name,"ジャンル名" %>
            <%= f.text_field :name %>
            <%= f.submit "変更を登録", class: "btn btn-outline-success rounded-pill btn-md" %>
          </div>
        </div>
      <% end %>
  </div>
