    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "Edit", edit_admin_genre_path(genre), class: "btn btn-outline-success rounded-pill btn-md" %></td>
        <td><%= link_to "Delete", admin_genre_path(genre), method: :delete, remote: true, data: {confirm: "ほんまに削除してもええですか？"}, class: "btn btn-outline-danger rounded-pill btn-md" %></td>
      </tr>
    <% end %>