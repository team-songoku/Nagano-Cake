<div class="container">
  <div class="row">
    <div class="col">
      <h1>ジャンル一覧・追加</h1>
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name,"ジャンル名" %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
    </diV>
  </div>


        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody class="table">
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-outline-success badge rounded-pill" %></td>
            <td><%= link_to "削除する", admin_genre_path(genre), method: :delete, data: {confirm: "ほんまに削除してもええですか？"}, class: "btn btn-outline-danger badge rounded-pill" %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
