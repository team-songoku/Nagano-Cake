<h1>admin edit商品ページ</h1>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <table>
    <tr>
      <th><%= f.file_field :image %></th>
      </tr>
    <tr>
      <th>商品名</th>
      <th><%= f.text_field :name, placeholder: "商品名記入" %></th>
    </tr>
    <tr>
      <th>商品説明</th>
      <th><%= f.text_field :introduction, placeholder: "ここに説明文記入" %></th>
    </tr>
    <tr>
      <th>ジャンル</th>
      <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></th>
    </tr>
    <tr>
      <th>税抜価格</th>
      <th><%= f.text_field :without_tax, placeholder: "入力" %></th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th>
        <%= f.radio_button :is_active, true %>
        <%= f.label '販売中' %>
      </th>
      <th>
        <%= f.radio_button :is_active, false %>
        <%= f.label '販売停止中' %>
      </th>
    </tr>
  </table>
  <div>
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
