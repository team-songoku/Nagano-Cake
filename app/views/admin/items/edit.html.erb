  <div class="container">
    <div class="row mt-5">
      <div class=col>
        <h1 class="text-info text-center">管理者側商品編集画面</h1>
      </div>
    </div>
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <div class="row">
        <div class="mx-auto">
          <table class="table table-hover">
            <tr>
              <th>img</th>
              <th><%= f.file_field :image %></th>
            </tr>
            <tr>
              <th>商品名</th>
              <th><%= f.text_field :name, placeholder: "商品名記入" %></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= f.text_field :introduction, placeholder: "ここに説明文記入" %></th>
            </tr>
            <tr>
              <th>ジャンル</th>
              <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></th>
            </tr>
            <tr>
              <th>税抜価格</th>
              <th><%= f.text_field :without_tax, placeholder: "入力" %></th>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <th>
                <%= f.radio_button :is_active, true %>
                <%= f.label '販売中' %>
                <%= f.radio_button :is_active, false %>
                <%= f.label '販売停止中' %>
              </th>
            </tr>
          </table>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "変更を保存", class: "btn btn-outline-success rounded-pill btn-lg" %>
      </div>
    <% end %>
  </div>