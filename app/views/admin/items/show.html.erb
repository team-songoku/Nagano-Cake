  <div class="container">
    <div class="row mt-5">
      <div class=col>
        <h1 class="text-info text-center">管理者側商品詳細画面</h1>
      </div>
    </div>
        <div>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x300" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
        </div>
        <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= (@item.without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
        </table>
        <div>
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-outline-success" %>
        </div>
        <div>
        <%= link_to "削除する",admin_item_path(@item.id), method: :delete, data: {confirm: "ほんまに削除しますか？"}, class: "btn btn-outline-danger" %>
        </div>