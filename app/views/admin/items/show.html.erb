<h1>admin show商品ページ</h1>
<div>
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "300x300" %>
  <% else %>
    <%= image_tag 'no_image', size: "300x300" %>
  <% end %>
</div>
<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <!--ジャンルcontroller作成してから-->
  </tr>
  <tr>
    <td>税込価格</td>
    <td><%= (@item.without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td>
      <% if @item.is_active == true %>
        販売中
      <% else %>
        販売停止中
      <% end %>
    </td>
  </tr>
</table>
<div><%= link_to "編集する" ,edit_admin_item_path(@item.id) %></div>
