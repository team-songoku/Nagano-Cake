  <div class="container">
    <div class="row mt-5">
      <div class=col>
        <h1 class="text-danger text-center">Manager side products detail</h1>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <div class="center-block">
          <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "300x300", class: "d-block mx-auto" %>
          <% else %>
            <<%= image_tag 'no_image', size: "300x300", class: "d-block mx-auto"%>
          <% end %>
        </div>
        <table class="table table-bordered">
          <tr>
            <td class="table-warning">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td class="table-warning">商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="table-warning">ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td class="table-warning">税込価格</td>
            <td><%= (@item.without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
          </tr>
          <tr>
            <td class="table-warning">販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </table>

      </div>
    </div>
    <div class="text-center">
      <%= link_to "Edit", edit_admin_item_path(@item.id), class: "btn btn-outline-success rounded-pill btn-lg" %>
      &emsp;　　　　　&emsp;
      <%= link_to "Delete",admin_item_path(@item.id), method: :delete, data: {confirm: "ほんまに削除しますか？"}, class: "btn btn-outline-danger rounded-pill btn-lg" %>
    </div>
  </div>
