  <div class="container">
    <div class="row mt-5">
      <div class=col>
        <h1 class="text-info text-center">管理者側商品一覧</h1>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>商品id</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name ,admin_item_path(item) %></td>
              <td><%= item.without_tax.to_s(:delimited, delimiter: ',') %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active == true %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="text-center">
      <%= link_to "新規登録" ,new_admin_item_path, class: "btn btn-outline-success rounded-pill btn-lg" %>
    </div>
  </div>

