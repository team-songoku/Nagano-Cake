  <div class="container">
    <div class="row mt-5">
      <div class=col>
        <h1 class="text-info text-center">商品新規登録画面</h1>
      </div>
    </div>
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="row">
        <div class="mx-auto">
          <table class="table table-bordered">
            <tr>
              <th class="table-info">Image</th>
              <th><%= f.file_field :image %></th>
            </tr>
            <tr>
              <th class="table-info">商品名</th>
              <th><%= f.text_field :name, placeholder: "商品名記入" %></th>
            </tr>
            <tr>
              <th class="table-info">商品説明</th>
              <th><%= f.text_field :introduction, placeholder: "ここに説明文の記述" %></th>
            </tr>
            <tr>
              <th class="table-info">ジャンル</th>
              <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></th>
            </tr>
            <tr>
              <th class="table-info">税抜価格</th>
              <th><%= f.text_field :without_tax, placeholder: "価格入力" %></th>
            </tr>
            <tr>
              <th class="table-info">販売ステータス</th>
              <th>
                <%= f.radio_button :is_active, true %>
                <%= f.label '販売中' %>
                <%= f.radio_button :is_active, false %>
                <%= f.label '販売停止中' %>
              </th>
            </tr>
          </table>
          <div class="text-right">
            <%= f.submit "新規登録", class: "btn btn-outline-success rounded-pill btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
