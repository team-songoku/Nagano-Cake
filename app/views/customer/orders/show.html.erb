<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="text-danger text-center">注文履歴詳細</h1>
    </div>
  </div>
  <div class="row mt-5">
     <div class="mx-auto col-8">
      <h3>注文情報</h3>
        <table class="table table-bordered">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.shipping_postal_code %><br>
              <%= @order.shipping_address %><br>
              <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </table>
      </div>
    
     <div class="mx-auto col-4">  
      <h3>請求情報</h3>
        <table class = "table table-bordered">
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_amount %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_amount + @order.postage %></td>
          </tr>
        </table>
     </div>
  </div> 
    
  <div class="row mt-5">
   <div class="mx-auto col-10">
   <h3>注文内容</h3>
    <table class = "table table-bordered">
      <thred>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thred>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.price * order_detail.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>  
</div>
