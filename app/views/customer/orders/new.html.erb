<h3>注文情報入力</h3>

<!--遷移先は注文確認画面(/orders/confirm)-->
<%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
<div>支払い方法</div>
<div>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method,"クレジットカード" %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method,"銀行振込" %>
</div>

<div>お届け先</div>
<div>
  <div>
    <%= f.radio_button :address_select, 1 %>
    <%= f.label :address_select, "ご自身の住所" %>
    〒<%= current_customer.post_code %>
    <%= current_customer.address %>
    <%= current_customer.last_name+current_customer.first_name %>
  </div>
  <div>
    <%= f.radio_button :address_select, 2 %>
    <%= f.label :address_select, "登録済住所から選択" %>
    <!--↓登録済み住所のセレクトボックス-->
    <%= f.select :address_id, options_from_collection_for_select(current_customer.shipping_addresses, :id, :address_display) %>
  </div>
  <div>
  <%= f.radio_button :address_select, 3 %>
  <%= f.label :address_select, "新しいお届け先" %>
  </div>
</div>

<div>
  <%= f.submit "確認画面へ進む" %>
</div>
<% end %>
