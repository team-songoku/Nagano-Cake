<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="text-info text-center">マイページ</h1>
    </div>
  </div>  
    <div class="row">
      <div class="mx-auto">
        <table class="table">
         <thead>
            <tr>
              <th style="text-align:center">登録情報</th>
              <th style="text-align:center">配送先</th>
              <th style="text-align:center">注文履歴</th>
            </tr>
         </thead>
         <tbody>
            <tr>
              <td align="center"><%= link_to "編集をする", edit_customer_path(@customer), class: 'btn btn-outline-success rounded-pill btn-lg' %></td>
              <td align="center"><%= link_to "一覧を見る",shipping_addresses_path, class: 'btn btn-outline-warning rounded-pill btn-lg' %></td>
              <td align="center"><%= link_to "一覧を見る",admin_orders_path, class: 'btn btn-outline-info rounded-pill btn-lg' %></td>
            </tr>
         </tbody>
        </table>
      </div>
    </div>  
    <div class="row">
      <div class="mx-auto">
        <table class = "table table-bordered">
        　<tr>
            <th class="table-active">氏名</th>
          　<td><%= @customer.last_name %><%= @customer.first_name %></td>
        　</tr>
        　<tr>
            <th class="table-active">カナ</th>
          　<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        　</tr>
        　<tr>
          　<th class="table-active">郵便番号</th>
          　<td><%= @customer.post_code %></td>
        　</tr>
        　<tr>
          　<th class="table-active">住所</th>
          　<td><%= @customer.address %></td>
        　</tr>
        　<tr>
          　<th class="table-active">電話番号</th>
          　<td><%= @customer.phone_number %></td>
        　</tr>
        　<tr>
          　<th class="table-active">メールアドレス</th>
          　<td><%= @customer.email %></td>
        　</tr>
        </table>
       </div>
     </div>
