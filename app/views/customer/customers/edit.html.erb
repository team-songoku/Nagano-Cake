<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1 class="text-info text-center">会員情報編集画面</h1>
    </div>
  </div>
    <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
    <div class="row">
      <div class="mx-auto">
        <table class = "table table-borderless">
          <tr>
            <th class="table-active">氏名</th>
            <td>   
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
             </td> 
          </tr>
          <tr>
            <th class="table-active">フリガナ</th>
            <td>   
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td> 
          </tr> 
          <tr>
            <th class="table-active">郵便番号</th>
            <td>   
              <%= f.text_field :post_code %>
            </td> 
           </tr>
          <tr>
            <th class="table-active">住所</th>
            <td>   
              <%= f.text_field :address,size: 42 %>
            </td> 
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <td>   
              <%= f.telephone_field :phone_number %>
            </td> 
          </tr>
             
          <tr>
            <th class="table-active">メールアドレス</th>
            <td>   
              <%= f.email_field :email %>
            </td> 
          </tr>
          <tr>
            <td colspan="2">
            <div style="text-align:center">
            <%= f.submit "編集内容を保存",class: "btn btn-outline-success rounded-pill btn-lg" %>　
            <%= link_to "退会する", unsubscribe_path, class: "btn btn-outline-danger rounded-pill btn-lg" %> 
            </div>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>    
