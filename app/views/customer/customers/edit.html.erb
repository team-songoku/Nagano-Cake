<div class="container">
  <div class="align-items-center justify-content-md-center">
    <h2 class="text-center">会員情報編集画面</h2>
  
    <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
  
        <table class = "table table-borderless">
            
          <tr>
            <td>氏名</td>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>  
          </tr>  
            
          <tr>
            <td>フリガナ</td>
            <td>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>  
          </tr>
          
          <tr> 
            <td>郵便番号</td>
            <td><%= f.text_field :post_code %></td> 
          </tr> 
            
          <tr>  
            <td>住所</td> 
            <td><%= f.text_field :address %></td> 
          </tr>  
          
          <tr> 
            <td>電話番号</td> 
            <td><%= f.telephone_field :phone_number %></td> 
          </tr>
          
          <tr>
            <td>メールアドレス</td>  
            <td><%= f.email_field :email %></td>
          </tr>  
            
          <tr> 
            <td><%= f.submit "編集内容を保存",class: "btn btn-outline-dark" %></td> 
            <td><%= link_to "退会する", unsubscribe_path, class: "btn btn-outline-danger" %></td>
          </tr>
          
        </table>
       
    <% end %>
  </div>
</div>    
