<div class="container">
  <div class="row mt-5">
    <div class="mx-auto">
      <div>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "500x500" %>
        <% else %>
          <%= image_tag 'no_image', size: "500x500" %>
        <% end %>
      </div>
      <table class="table table-borderless h4">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= (@item.with_tax_price).to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
      </table>
    </div>
  </div>  
  <div class="row mt-3">
    <div class="mx-auto">
      <!--個数選択とカートに入れるボタンお願いします！-->
      <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id,class: 'btn-md' %>
          <%= f.select :quantity, *[1..20],{include_blank: '個数選択'},required: true,class: 'btn-lg' %>&emsp;　　
          <%= f.submit "カートに入れる", class: "btn btn-outline-light bg-info" %>
      <% end %>
    </div>
  </div>  
</div>