<h1>客 show商品ページ</h1>
<div>
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "300x300" %>
  <% else %>
    <%= image_tag 'no_image', size: "300x300" %>
  <% end %>
</div>
<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>税込価格</td>
    <td><%= (@item.with_tax_price).to_s(:delimited, delimiter: ',') %>円</td>
  </tr>
</table>

<!--個数選択とカートに入れるボタンお願いします！-->
<%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
    <%= f.hidden_field :item_id, value: @item.id  %>
    <%= f.select :quantity, *[1..10] %>
    <%= f.submit "カートに入れる", class: 'btn btn-outline-secondary' %>
<% end %>