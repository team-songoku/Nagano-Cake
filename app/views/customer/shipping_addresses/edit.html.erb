<h2>配送先編集</h2>

<%= form_with model: @shipping_address, url: shipping_address_path, method: :patch  do |f| %>
    <div class="field">
        <%= f.label :"郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
    
    <div class="field">
        <%= f.label :"住所" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
    
    <div class="field">
        <%= f.label :"宛名" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        <%= f.submit "変更内容を保存" %>
    </div>
<% end %>